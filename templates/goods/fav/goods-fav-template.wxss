/*基本容器*/
.goods-fav-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 23rpx;
    padding-right: 35rpx;
    background-color: #FFF;
}

/*信息容器*/
.goods-info-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex:1;
    margin-left: 25rpx;
}

/*商品图片*/
.goods-item-img{
    height: 130rpx;
    width: 130rpx;
}

/*商品名称*/
.goods-name{
    color: #000311;
    font-size: 30rpx;
}

/*商品价格*/
.goods-price{
    font-size: 30rpx;
    color:#ff6200;
}

/*加入购物车图片*/
.goods-more-img{
    height: 45rpx;
    width: 45rpx;
}
/*分隔符*/
.goods-item-border{
    height: 1px;
    background-color: #F3F3F3;
    width: 725rpx;
    margin-left: 25rpx;
}