@import "/templates/cart/item/cart-item-template.wxss";


page{
    height: 100%;
    width: 750rpx;
    background-color: #F5F5F5;
    overflow-x: hidden;
}

.container{
    padding-bottom: 120rpx;
    width: 750rpx;
    overflow-x: hidden;
}

/*占位*/
.cart-empty-tips{
    position: fixed;
    top: 300rpx;
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.cart-empty-tips image{
    width:200rpx;
    height: 200rpx;
}
.cart-empty-tips text{
    color: #656565;
    font-size: 40rpx;
    margin-left: 30rpx;
}

/*
* 底部购买栏样式
*/
.cart-bar-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background: #FEFEFE;
    border-top: 1px solid #DCDCDC;
    border-bottom: 1px solid #EEEEEE;
    z-index: 100;
}

/*选择框容器*/
.cart-check-all-container{
    display: flex;
    flex-direction: column;
    width: 80rpx;
    margin-right: 20rpx;
    text-align: center;
}


/*购买框容器*/
.bar-buy-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 250rpx;
    background-color: #1296db;
    color: #FFF;
}
/*购买按钮*/
.bar-buy-container text{
    color: #FFF;
}
.bar-buy-container .text-btn{
    font-size: 40rpx;
}

/*汇总信息*/
.cart-check-info-container{
    display: flex;
    flex:1;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    padding-right: 30rpx;
}
/*汇总信息文字*/
.cart-check-price-container text{
    font-size: 35rpx;
}
.cart-check-tips-text{
    font-size: 26rpx;
    color: #A6A6A6;
}
.goods-price{
    color:#ff6200;
}

/*没有购买物品的情况*/
.bar-buy-empty{
    background-color: #B0B0B0;
}

/*顶栏*/
.cart-header-container{
    padding-right: 25rpx;
    padding-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 85rpx;
    background-color: #FBFBFB;
    margin-top: 20rpx;
}

.cart-shop-info-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}

/*顶栏图片*/
.shop-info-icon{
    height: 40rpx;
    width: 40rpx;
    vertical-align: middle;
}

/*顶栏店铺名称*/
.shop-info-name{
    margin-left: 10rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    color:#262626;
}


/*批量编辑*/
.cart-batch-edit{
    font-size: 28rpx;
    color: #A3A3A3;
}

/*批量编辑栏样式*/
.cart-batch-btn-container{
    padding-right: 10rpx;
}