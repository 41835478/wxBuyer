@import "/templates/shop/info/shop-info-template.wxss";

page{
    height: 100%;
    background-color: #f2f2f2;
}

/*轮播图*/
.shop-swiper{
    height: 375rpx;
    width: 750rpx;
}
.shop-swiper image{
    width:100%;
    height:375rpx;
}

/*店铺名称*/
.shop-name-container{
    display: flex;
    flex-direction: row;
    background-color: #FFF;
    align-items: center;
    padding: 20rpx;
    height: 60rpx;
}
.shop-name-font{
    margin-left: 20rpx;
    font-size: 38rpx;
    color: #333;
    letter-spacing: 2px;
    flex-grow: 1;
}

/*举报栏*/
.shop-report-container{
    background-color: #FFF;
}
